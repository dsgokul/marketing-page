---
type Props = {
  icon?: string;
  percent: string;
  title: string;
  content: string;
};

const { icon, percent, title, content } = Astro.props;
import "@fontsource/manrope";
---

<div class="flex flex-col i gap-2 max-w-[30rem] h-full font-manrope">
  <div class="flex items-center gap-4">
    {icon && <img src={icon} alt="icon" />}
    <span
      class="self-stretch justify-start text-blue-950 text-5xl font-bold font-['Manrope'] leading-[67.20px]"
      >{percent}</span
    >
  </div>
  <div class="mb-4 h-[2.5rem]">
    <span class="text-md lg:text-xl text-blue-600">{title}</span>
  </div>
  <div>
    <span class="text-md lg:text-xl text-[#4C5967]">{content}</span>
  </div>
</div>
