---
import ContactForm from "../components/ContactForm";
import { MAIL, CALL, MAP, CHEVRONRIGHT } from "@/consts";
---

<section
  class="relative h-full px-4 sm:px-8 md:px-16 lg:px-44 xl:px-56 bg-[#f6f9ff] py-36 mb-14 lg:mb-24"
>
  <div class="flex flex-col-reverse md:flex-row justify-between gap-10 w-full">
    <div class="flex flex-col text-[#4c5967] w-full md:w-[50%] max-w-md">
      <span class="text-5xl text-[#002166] font-semibold mb-8 hidden md:block">
        Contact Us
      </span>

      <span class="text-xl mb-6">
        Email, call or complete the form to help us know more about you
      </span>

      <div class="text-lg font-medium mb-12">
        <span class="flex gap-3 text-[#002166]">
          <img src={MAIL.src} alt="Mail" />
          <a href="mailto:queries@creamcollar.com" class="underline">
            queries@creamcollar.com
          </a>
        </span>
        <span class="flex gap-3 text-[#002166]">
          <img src={CALL.src} alt="Call" />
          +91 87547 04839
        </span>
      </div>
      <div class="flex flex-col text-xl font-medium mb-8">
        <span class="text-[#002166] mb-2"> Looking to join our team? </span>
        <span class="font-normal">
          Send in a mail with your resume to
          <a href="mailto:careers@creamcollar.com" class="underline">
            careers@creamcollar.com
          </a>
        </span>
      </div>
      <div class="flex flex-col text-xl font-medium">
        <span class="text-[#002166] mb-2">
          Require Support on our platform?
        </span>
        <span class="font-normal">
          Report your issue on
          <a href="mailto:support@creamcollar.com" class="underline">
            support@creamcollar.com
          </a>
        </span>
      </div>
    </div>

    <div class="flex flex-col items-center w-full md:w-[50%]">
      <span class="text-5xl text-[#002166] font-semibold mb-8 block md:hidden">
        Contact Us
      </span>
      <!-- Only the form needs React -->
      <ContactForm client:load />
    </div>
  </div>
</section>

<section
  class="relative h-full px-4 sm:px-8 md:px-16 lg:px-44 xl:px-56 py-24 md:py-36"
>
  <div class="flex flex-col md:flex-row items-center">
    <h1 class="block md:hidden text-5xl text-[#002166] font-semibold mb-12">
      Find Us Here
    </h1>
    <div class="relative h-max rounded-2xl w-full md:w-[50%] mb-12">
      <img src={MAP.src} alt="map" class="rounded-2xl" />

      <div class="absolute top-1/2 left-6.5 md:left-21 w-max">
        <div
          class="p-6 text-xl rounded-2xl bg-white border border-[#d6e3ff] w-max flex flex-col gap-2"
        >
          <span class="text-[#002166] font-semibold">
            CreamCollar EdTech Pvt Ltd
          </span>

          <a href="https://maps.app.goo.gl/SwgomNHw3RStZb516" target="_blank">
            <span class="text-[#1533ff] font-semibold flex gap-4 items-center">
              Open in Google maps
              <img src={CHEVRONRIGHT.src} alt="Chevron Right" />
            </span>
          </a>
        </div>
        <div
          class="absolute -top-2 right-14 w-4 h-4 bg-white rotate-45 rounded-xs border-t border-l border-[#d6e3ff]"
        >
        </div>
      </div>
    </div>
    <div class="w-full md:w-[50%] ml-32">
      <h1 class="hidden md:block text-5xl text-[#002166] font-semibold mb-12">
        Find Us Here
      </h1>
      <div class="flex flex-col text-[#4c5967]">
        <h2 class="text-[#002166] mb-2 text-2xl">Headquarters</h2>
        <span class="text-lg">
          CreamCollar Edtech pvt ltd <br /> Ground floor, Prajwal Gangotri building,
          <br /> Sarvamangala Colony, Sri Devi Colony, <br />
          Ashok Nagar, Chennai, Tamil Nadu 600083
        </span>
      </div>
    </div>
  </div>
</section>
